// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Employee {
  id           Int        @id @default(autoincrement())
  firstName    String
  lastName     String
  phone        String
  email        String
  salary       Int
  hireDate     DateTime
  jobTitle     String
  Department   Department @relation(fields: [departmentId], references: [id])
  departmentId Int
}

model Department {
  id       Int        @id @default(autoincrement())
  name     String
  Employee Employee[]
}
